# Lightpanda Configuration

# Cloud Browser Configuration
# Set to 'true' to use Lightpanda cloud browser
USE_CLOUD=false

# Your Lightpanda cloud token (required for cloud mode)
# Get your token at https://lightpanda.io
LPD_TOKEN=your_token_here

# Local Browser Configuration
LPD_HOST=127.0.0.1
LPD_PORT=9222

# Scraper Configuration
TIMEOUT=10000
SEARCH_TERM=lightpanda

# Logging Configuration
# Options: debug, info, warn, error
LOG_LEVEL=info

# Options: pretty, json
LOG_FORMAT=pretty
